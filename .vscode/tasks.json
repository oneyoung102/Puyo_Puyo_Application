{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build SFML",
      "type": "shell",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",

        "src/puyoMain.cpp",
        "src/puyoLet.cpp",

        "src/puyoResources/puyoPrinting.cpp",
        "src/puyoResources/puyoFileSystem.cpp",

        "src/puyoPhase/puyoPhasing.cpp",
        "src/puyoPhase/puyoBoard.cpp",
        "src/puyoPhase/puyoPlayer.cpp",
        "src/puyoPhase/puyoTempPuyo/puyoTempPuyo.cpp",
        "src/puyoPhase/puyoTempPuyo/puyoGravityPuyo.cpp",
        "src/puyoPhase/puyoTempPuyo/puyoVanishPuyo.cpp",
        "src/puyoPhase/puyoTempPuyo/puyoFuturePuyo.cpp",
            "src/puyoPhase/puyoTempPuyo/puyoAction/puyoPuyoAct_temp.cpp",
            "src/puyoPhase/puyoTempPuyo/puyoAction/puyoPuyoGravity_temp.cpp",
            "src/puyoPhase/puyoTempPuyo/puyoAction/puyoPuyoVanish_temp.cpp",
        "src/puyoPhase/puyoPlayPuyo/puyoPlayPuyo.cpp",
            "src/puyoPhase/puyoPlayPuyo/puyoAction/puyoPuyoAct.cpp",
            "src/puyoPhase/puyoPlayPuyo/puyoAction/puyoPuyoLeft.cpp",
            "src/puyoPhase/puyoPlayPuyo/puyoAction/puyoPuyoRight.cpp",
            "src/puyoPhase/puyoPlayPuyo/puyoAction/puyoPuyoUp.cpp",
            "src/puyoPhase/puyoPlayPuyo/puyoAction/puyoPuyoDown.cpp",
            "src/puyoPhase/puyoPlayPuyo/puyoAction/puyoPuyoTurn.cpp",
            "src/puyoPhase/puyoPlayPuyo/puyoAction/puyoPuyoDrop.cpp",
            "src/puyoPhase/puyoPlayPuyo/puyoAction/puyoPuyoGravity.cpp",
            "src/puyoPhase/puyoPlayPuyo/puyoAction/puyoPuyoStay.cpp",
        

        "-o",
        "${workspaceFolder}/bin/puyo_puyo",
        "-I/opt/homebrew/include",
        "-L/opt/homebrew/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}