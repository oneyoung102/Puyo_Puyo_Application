{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build SFML",
      "type": "shell",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",

        "src/puyoMain.cpp",
        "src/puyoBoard.cpp",
        "src/puyoPlayPuyo.cpp",
        "src/puyoPlayer.cpp",
        "src/puyoLet.cpp",

        "src/puyoResources/puyoPrinting.cpp",
        "src/puyoResources/puyoFileSystem.cpp",

        "src/puyoPhase/puyoPhasing.cpp",
        "src/puyoPhase/puyoTempPuyo.cpp",

        "src/puyoAction/puyoPuyoAct.cpp",
        "src/puyoAction/puyoPuyoLeft.cpp",
        "src/puyoAction/puyoPuyoRight.cpp",
        "src/puyoAction/puyoPuyoUp.cpp",
        "src/puyoAction/puyoPuyoDown.cpp",
        "src/puyoAction/puyoPuyoTurn.cpp",
        "src/puyoAction/puyoPuyoDrop.cpp",
        "src/puyoAction/puyoPuyoFall.cpp",
        "src/puyoAction/puyoPuyoStay.cpp",
        "src/puyoAction/puyoPuyoGravity.cpp",

        "-o",
        "${workspaceFolder}/bin/puyo_puyo",
        "-I/opt/homebrew/include",
        "-L/opt/homebrew/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}